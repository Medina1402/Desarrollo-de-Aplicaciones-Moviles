<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.SearchViewFragment"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        tools:ignore="UselessParent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_title_movie"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:boxStrokeColor="@color/colorText_2"
            app:boxCornerRadiusBottomEnd="100sp"
            app:boxCornerRadiusTopEnd="100sp"
            app:boxCornerRadiusBottomStart="100sp"
            app:boxCornerRadiusTopStart="100sp"
            app:boxBackgroundColor="@color/colorText_2"
            app:endIconMode="clear_text"
            app:endIconTint="@color/colorPrimary"
            app:endIconDrawable="@drawable/ic_baseline_clear_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    <androidx.core.widget.NestedScrollView
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Sin resultados"/>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>