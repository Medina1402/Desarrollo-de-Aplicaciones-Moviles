<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="30sp"
    android:orientation="vertical"
    tools:context=".components.MovieReviewFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_marginTop="10sp"
        android:layout_marginBottom="5sp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/movie_review_username"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="Abraham Medina Carrillo"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/movie_review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/02/2015"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <TextView
        android:id="@+id/movie_review_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cinco jóvenes mutantes que acaban de descubrir sus habilidades, son encerrados en unas instalaciones secretas contra su voluntad y luchan por escapar de su pasado y salvarse a sí mismos."
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="RtlHardcoded">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center|start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:ignore="UseCompoundDrawables,UselessParent">
            <ImageView
                android:layout_width="16sp"
                android:layout_height="16sp"
                android:src="@drawable/ic_baseline_star_24"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/movie_review_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="4.3"
                android:paddingHorizontal="5sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/movie_review_shared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_baseline_share_24"
            android:textColor="@color/colorText_2"
            app:iconTint="@color/colorText_2"
            android:text="compartir"
            android:elevation="0dp"
            android:textSize="12sp"
            app:iconSize="14sp"
            android:backgroundTint="@color/colorPrimaryDark"
            tools:ignore="HardcodedText"/>
    </LinearLayout>

</LinearLayout>